def unlockNode(*args):
    selection = cmds.ls(selection = True)
    for node in selection:
        cmds.lockNode(node, lock = False)


def checkFile():
    refNodes = cmds.ls(rf = True)
    notinclRef = "_mRefRN"
    for rNode in refNodes:
        if notinclRef not in rNode:
            refObj.append(rNode)
    print(refObj)

